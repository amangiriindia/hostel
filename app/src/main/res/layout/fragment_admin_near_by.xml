<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearby Service Form"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/admin_nearby_headingEditText"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/border"
            android:layout_height="60dp"
            android:hint="Heading"
            android:inputType="text"/>

        <EditText
            android:id="@+id/admin_nearby_descriptionEditText"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:hint="Description"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/admin_nearby_distanceEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Distance"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/admin_nearby_contactNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:hint="Contact Number"
            android:layout_marginBottom="16dp"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/admin_nearby_otherOptionEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:hint="Other Option"
            android:layout_marginBottom="16dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/admin_nearby_submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearby Services"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_nearbyServicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/near_service_item"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
